{% extends 'base.html.twig' %}

{% block title %}Homepage - {{ parent() }} {% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}

<div class="d-flex flex-row m-5">
    <div class="d-flex flex-column w-100 containerCities">
        <h1><i class="fas fa-city"></i> Bienvenue sur la météo des villes</h1>
    {% for city in cities %}
        <div class="d-flex flex-row m-3 w-75">
            <div class="mx-3 weatherPng"><img class="w-50" src="{{ randomWeatherImg }}" alt=""></i></div>
            <div class="d-flex flex-column">
                <h5 class="font-weight-bold text-primary">{{ city }}</h5>
                <div class="d-flex flex-column w-100">
                    <p class="details-widget">le {{ todayDate|date("d-m-Y") }}</p>
                    <span class="details-widget">{{ randomWeatherMin }} °C / {{ randomWeatherMax }} °C</span>
                </div>
            </div>
        </div>
    {% endfor %}

